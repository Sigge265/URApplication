<Window x:Class="Project.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Height="18" Margin="241,123,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="337"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Height="18" Margin="241,237,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="337"/>
        <Button x:Name="btnLogin" Click="btnLogin_Click" Content="Login" HorizontalAlignment="Center" Height="43" Margin="0,287,0,0" VerticalAlignment="Top" Width="254" IsDefault="True" Background="Green"  Foreground="White" FontSize="25" BorderBrush="Black"  BorderThickness="4"/>
        <Label Content="Username" HorizontalAlignment="Left" Height="33" Margin="241,69,0,0" VerticalAlignment="Top" Width="221" FontSize="20"/>
        <Label Content="Password" HorizontalAlignment="Left" Height="33" Margin="241,187,0,0" VerticalAlignment="Top" Width="221" FontSize="20"/>

    </Grid>
</Window>
